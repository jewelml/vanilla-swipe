{
  "collectCoverage": false,
  "collectCoverageFrom": ["src/lib/**/*.{ts,tsx}", "!<rootDir>tests/helpers/"],
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "testEnvironment": "jsdom",
  "testMatch": ["**/?(*.)+(spec|test).[jt]s?(x)"],
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json"]
}
